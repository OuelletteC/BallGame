<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chris.ballgame.MainActivity"
    android:background="@drawable/menubackground">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/PlayButton"
        android:textColor="#000000"
        android:singleLine="false"
        android:foregroundTint="#55add9"
        android:background="#3a6ec9"
        android:clickable="true"
        android:textSize="25dp"
        android:textStyle="italic"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        android:minWidth="125dp"
        android:minHeight="45dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Controls"
        android:id="@+id/ControllsButton"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/PlayButton"
        android:layout_alignRight="@+id/PlayButton"
        android:layout_alignEnd="@+id/PlayButton"
        android:minWidth="125dp"
        android:minHeight="60dp" />
</RelativeLayout>
